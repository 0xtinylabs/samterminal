# ============================================================
# SamTerminal - Root Environment Variables
# ============================================================
# Single source of truth for all services.
# All services read from this file.
# ============================================================

# ===================
# ENVIRONMENT
# ===================
NODE_ENV=development
# Set to true in docker-compose, false for local dev
DOCKER=false

# ===================
# POSTGRES (required for docker-compose)
# ===================
POSTGRES_PASSWORD=your_secure_postgres_password

# ===================
# BLOCKCHAIN - RPC PROVIDERS
# ===================
# Base Mainnet (Alchemy recommended)
RPC_URL_BASE=https://base-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
RPC_WS_URL_BASE=wss://base-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# ===================
# API KEYS - BLOCKCHAIN DATA
# ===================
ALCHEMY_API_KEY=your_alchemy_api_key
MORALIS_API_KEY=your_moralis_api_key
COINGECKO_API_KEY=your_coingecko_pro_api_key
ETHERSCAN_API_KEY=your_etherscan_api_key

# ===================
# API KEYS - SWAP AGGREGATORS
# ===================
MATCHA_API_KEY=your_0x_matcha_api_key

# ===================
# TELEGRAM BOT
# ===================
MAIN_BOT_TOKEN=your_main_telegram_bot_token
USER_BOT_TOKEN=your_user_telegram_bot_token
MAIN_GROUP_CHAT_ID=your_telegram_group_chat_id

# ===================
# MICROSERVICES HOST
# ===================
MICROSERVICES_HOST=localhost

# ============================================================
# DATABASE: USER (Unified)
# ============================================================
# Single database for user-related services (notification, swap, transactions)
# Uses PostgreSQL schemas for isolation:
#   - notification schema
#   - swap schema
#   - transactions schema
USER_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/samterminal_user

# ============================================================
# SERVICE: MAIN (API Gateway)
# ============================================================
MAIN_PORT=50060
MAIN_HOSTNAME=localhost
API_KEY=your_internal_api_key
MAIN_TOKEN_SERVICE_HOST=localhost
MAIN_TOKEN_SERVICE_PORT=50061
MAIN_WALLET_SERVICE_HOST=localhost
MAIN_WALLET_SERVICE_PORT=50062

# ============================================================
# SERVICE: SWAP
# ============================================================
SWAP_PORT=50059
SWAP_HOSTNAME=localhost
# Database: Uses USER_DATABASE_URL with 'swap' schema
SWAP_CONTRACT=0x...
SWAPPER_ADDRESS=0x...
PERMIT_2=0x000000000022D473030F116dDEE9F6B43aC78BA3
PERMIT_SWAP=0x...
FEE_RECEIVER_WALLET=0x...
FEE_RECEIVE_TOKEN=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913
FEE_BPS=30
FEE_BPS_REFERRED=25
SWAP_API_KEY=your_internal_api_key
# Wallet private key for automated swaps (optional, can be overridden per request)
WALLET_PRIVATE_KEY=your_wallet_private_key

# ============================================================
# SERVICE: NOTIFICATION
# ============================================================
NOTIFICATION_PORT=50056
NOTIFICATION_HOSTNAME=localhost
# Database: Uses USER_DATABASE_URL with 'notification' schema

# ============================================================
# SERVICE: TRANSACTIONS
# ============================================================
TRANSACTIONS_PORT=50054
TRANSACTIONS_HOSTNAME=localhost
# Database: Uses USER_DATABASE_URL with 'transactions' schema

# ============================================================
# SERVICE: TOKENDATA (Go - Separate DB)
# ============================================================
TOKENDATA_PORT=50061
TOKENDATA_HTTP_PORT=8081
TOKENDATA_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/tokendata

# ============================================================
# SERVICE: WALLETDATA (Go - Separate DB)
# ============================================================
WALLETDATA_PORT=50062
WALLETDATA_HTTP_PORT=8082
WALLETDATA_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/walletdata
