{
  "name": "@samterminal/mcp-server",
  "version": "1.0.0",
  "description": "SAM Terminal MCP Server - Exposes gRPC services and Core Engine as MCP tools",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "samterminal-mcp": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist node_modules",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:cov": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.0",
    "@grpc/grpc-js": "^1.12.0",
    "@grpc/proto-loader": "^0.7.0",
    "@samterminal/core": "workspace:*"
  },
  "devDependencies": {
    "@samterminal/testing-utils": "workspace:*",
    "@samterminal/tsconfig": "*",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "jest": "^30.0.0",
    "ts-jest": "^29.2.5",
    "tsup": "^8.0.0",
    "typescript": "^5.7.3"
  },
  "keywords": [
    "samterminal",
    "mcp",
    "model-context-protocol",
    "ai-tools",
    "web3"
  ],
  "author": "SamTerminal Contributors",
  "license": "MIT",
  "homepage": "https://github.com/samterminal/samterminal/tree/main/packages/mcp-server",
  "repository": {
    "type": "git",
    "url": "https://github.com/samterminal/samterminal.git",
    "directory": "packages/mcp-server"
  },
  "bugs": {
    "url": "https://github.com/samterminal/samterminal/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
