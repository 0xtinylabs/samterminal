{
  "name": "@samterminal/cli",
  "version": "1.0.0",
  "description": "CLI for SamTerminal - Create and manage SamTerminal agents",
  "type": "module",
  "bin": {
    "sam": "./bin/sam.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./commands": {
      "import": "./dist/commands/index.js",
      "types": "./dist/commands/index.d.ts"
    },
    "./utils": {
      "import": "./dist/utils/index.js",
      "types": "./dist/utils/index.d.ts"
    }
  },
  "files": [
    "dist",
    "bin",
    "templates"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:cov": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "inquirer": "^9.2.23",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@samterminal/tsconfig": "*",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "jest": "^30.0.0",
    "ts-jest": "^29.2.5",
    "tsup": "^8.0.0",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "samterminal",
    "cli",
    "agent",
    "framework"
  ],
  "author": "SamTerminal Contributors",
  "license": "MIT",
  "homepage": "https://github.com/samterminal/samterminal/tree/main/packages/cli",
  "repository": {
    "type": "git",
    "url": "https://github.com/samterminal/samterminal.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/samterminal/samterminal/issues"
  }
}
