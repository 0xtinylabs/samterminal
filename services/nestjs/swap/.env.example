# ============================================================
# Swap Service
# ============================================================
# Token swap operations service
# 0x/Matcha aggregator integration
# ============================================================

# ===================
# SERVICE CONFIG
# ===================
PORT=50059
HOSTNAME=localhost

# ===================
# DATABASE
# ===================
DATABASE_URL=postgresql://postgres:password@localhost:5432/swap

# ===================
# DOCKER
# ===================
DOCKER=false

# ===================
# BLOCKCHAIN - RPC
# ===================
# Base mainnet RPC (override root if needed)
RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# ===================
# SWAP CONTRACTS (Base Chain)
# ===================
# Main swap contract address
SWAP_CONTRACT=0x...

# Swapper/router address
SWAPPER_ADDRESS=0x...

# Permit2 contract (Uniswap)
PERMIT_2=0x000000000022D473030F116dDEE9F6B43aC78BA3

# Permit swap contract
PERMIT_SWAP=0x...

# ===================
# API KEYS - SWAP AGGREGATORS
# ===================
# 0x (Matcha) - Swap quote API
# Endpoint: https://api.0x.org/v2/swap/allowance-holder/quote
MATCHA_API_KEY=your_0x_matcha_api_key

# ===================
# FEE CONFIGURATION
# ===================
# Fee receiver wallet address
FEE_RECEIVER_WALLET=0x...

# Fee token address (usually USDC)
FEE_RECEIVE_TOKEN=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913

# Fee basis points (30 = 0.3%)
FEE_BPS=30

# Referred user fee basis points
FEE_BPS_REFERRED=25

# ===================
# SERVER AUTH
# ===================
# Internal API authentication key
API_KEY=your_internal_api_key
