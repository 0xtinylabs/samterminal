# ============================================================
# Notification Service
# ============================================================
# Notification service with Telegram bot integration
# Runs as gRPC server
# ============================================================

# ===================
# SERVICE CONFIG
# ===================
PORT=50056
HOSTNAME=localhost

# ===================
# DATABASE
# ===================
DATABASE_URL=postgresql://postgres:password@localhost:5432/notification

# ===================
# DOCKER
# ===================
DOCKER=false

# ===================
# TELEGRAM BOTS
# ===================
# Main bot - Admin/system notifications
MAIN_BOT_TOKEN=your_main_telegram_bot_token

# User bot - User-facing notifications
USER_BOT_TOKEN=your_user_telegram_bot_token

# Main group chat for system alerts
MAIN_GROUP_CHAT_ID=your_telegram_group_chat_id

# ===================
# FUTURE: FARCASTER (Optional)
# ===================
# FARCASTER exists in Platform enum but not active
# FARCASTER_API_KEY=your_farcaster_api_key
# FARCASTER_SIGNER_UUID=your_farcaster_signer_uuid
